<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rollno."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/rollno._text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Roll no."
            android:textSize="15dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/rollno._edit"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="20dp"
            android:background="#f7f5f5"
            android:hint="enter roll no."
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fullname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Full Name"
            android:textSize="15dp"
            android:textStyle="italic"

            />

        <EditText
            android:id="@+id/fullname._edit"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="20dp"
            android:background="#f7f5f5"
            android:hint="enter name"
            android:textStyle="italic" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Gender"
            android:textSize="15dp"
            android:textStyle="italic" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:background="#f7f5f5"

            android:checkedButton="@id/radio0"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:button="@drawable/state"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:button="@drawable/state"
                android:text="Female"
                android:textStyle="italic"


                />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dob_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_text"
            android:layout_marginTop="20dp"
            android:text="DOB"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/datepicker_text"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:background="#f7f5f5"
            android:hint="enter date"
            android:text=""
            android:textSize="15dp"
            android:textStyle="italic"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/course_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Course"
            android:textSize="15dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Address"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/dialog_text"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="30dp"
            android:background="#f7f5f5"

            android:hint="Select State"
            android:textSize="15dp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Select Image"
            android:textSize="15dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/student" />
    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="ADD"
        android:textColor="#FFFFFF"

        />


</LinearLayout>